@model CustomerSupport.Models.MServiceRequest

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <div class="control-label">Tipo de Propiedad:</div>
            @*@Html.EditorFor(model => model.IdIdentificationType, new { htmlAttributes = new { @class = "form-control" } })*@
            @*@Html.ValidationMessageFor(model => model.IdIdentificationType, "", new { @class = "text-danger" })*@
            <select name="ProperyType" id="ProperyType" class="form-control select2" style="width: 100%;">
                <option value="1">SRF (Single Family Resident)</option>
                <option value="2">Condominio</option>
                <option value="3">De 1 a 2 Unidades</option>
                <option value="4">De 3 a 4 Unidades</option>
                <option value="5">De 5 o mas Unidades</option>
                <option value="6">Comercial</option>
                <option value="7">Residencial</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <div class="control-label">Direccion de la Propiedad:</div>
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @rows = 3, @cols = 10 })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <div class="control-label">Valor Estimado:</div>
            @Html.TextBoxFor(model => model.EstimatedValue, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EstimatedValue, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <div class="control-label">Tiene Planos?</div>

            <label class="ss_radioButton">
                Si
                <input type="radio" checked="checked" name="radio">
                <span class="checkmark"></span>
            </label>
            <label class="ss_radioButton">
                No
                <input type="radio" name="radio">
                <span class="checkmark"></span>
            </label>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <div class="control-label">Operación de Contrucción:</div>
            <div class="table-responsive">
                <div class="container">
                    <table id="TPersonContact" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Descripción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>01</td>
                                <td>Nueva Construcción</td>
                            </tr>
                            <tr>
                                <td>02</td>
                                <td>Anexo</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <div class="control-label">Necesita Financiamiento?</div>

            <label class="ss_radioButton">
                Si
                <input type="radio" checked="checked" name="radio">
                <span class="checkmark"></span>
            </label>
            <label class="ss_radioButton">
                No
                <input type="radio" name="radio">
                <span class="checkmark"></span>
            </label>

        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <div class="control-label">Ingreso Promedio:</div>
            @Html.TextBoxFor(model => model.MonthlyIncome, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MonthlyIncome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <div class="control-label">Deudas/Pagos Promedio:</div>
            @Html.TextBoxFor(model => model.DebtPayment, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DebtPayment, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
